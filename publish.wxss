/* pages/publish/publish.wxss */
.publish-container { 
  background: #f5f5f5; 
  min-height: 100vh;
  padding-bottom: 80px;
}

.form {
  background: #fff;
}

.radio-margin {
  margin-left: 20px;
}

.upload-section {
  padding: 15px;
  background: #fff;
}

.upload-title {
  font-size: 14px;
  color: #666;
  margin-bottom: 10px;
  display: block;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10px;
}

.image-item {
  width: 80px;
  height: 80px;
  margin-right: 10px;
  margin-bottom: 10px;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 4px;
}

.delete-icon {
  position: absolute;
  top: -8px;
  right: -8px;
  background: rgba(0,0,0,0.6);
  color: #fff;
  border-radius: 50%;
  padding: 2px;
}

.upload-btn {
  width: 80px;
  height: 80px;
  border: 1px dashed #d9d9d9;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fafafa;
}

.submit-btn {
  position: fixed;
  bottom: 20px;
  left: 15px;
  right: 15px;
}