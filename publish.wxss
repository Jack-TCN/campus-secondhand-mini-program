/* pages/publish/publish.wxss */
.publish-container { 
  padding: 10px; 
  background: #f5f5f5; 
  min-height: 100vh; 
}

.form {
  background: #fff;
  border-radius: 8px;
  margin-top: 10px;
}

.upload {
  padding: 15px;
  display: flex;
  align-items: center;
  background: #fff;
  margin-top: 10px;
  border-radius: 8px;
}

.preview {
  width: 80px;
  height: 80px;
  border-radius: 4px;
  margin-right: 15px;
  background: #f0f0f0;
}

.submit-btn {
  margin-top: 30px;
  margin-left: 15px;
  margin-right: 15px;
}