/* pages/index/index.wxss */
.container {
  position: relative;
  height: 100%;
  background: #f5f5f5;
}

.header {
  position: sticky;
  top: 0;
  z-index: 10;
  padding: 10px;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
}

.search-input {
  width: 100%;
}

.products-list {
  padding: 10px;
}

.product-card {
  margin-bottom: 12px;
  background: #fff;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.product-image {
  width: 100%;
  height: 150px;
}

.product-info {
  padding: 10px;
}

.product-title {
  display: block;
  font-size: 16px;
  font-weight: 500;
  margin-bottom: 4px;
}

.product-price {
  display: block;
  font-size: 18px;
  color: #e93b3d;
  margin-bottom: 4px;
}

.product-meta {
  font-size: 12px;
  color: #888;
}

.tag {
  margin: 0 10px 10px;
}

.tabbar {
  position: fixed;
  bottom: 0;
  width: 100%;
}

