/* pages/index/index.wxss */
.container {
  min-height: 100vh;
}

/* 顶部毛玻璃头部 */
.header {
  position: sticky;
  top: 0;
  width: 100%;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
  z-index: 10;
}

/* 搜索框自身透明，用 CSS 控制背景 */
.search-input >>> .van-field__control {
  background: rgba(255,255,255,0.8);
  border-radius: 25rpx;
  height: 60rpx;
}

/* 商品列表网格 */
.products-list {
  padding: 24rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  margin-bottom: 120rpx; /* 给 tabbar 留空 */
}

/* 单个商品卡片 */
.product-card {
  width: calc((100% - 3 * 24rpx) / 2);
  background: rgba(255, 255, 255, 0.8);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s, box-shadow 0.3s;
}

.product-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.15);
}

.product-image {
  width: 100%;
  height: 300rpx;
}

.product-info {
  padding: 16rpx;
}

.product-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.product-price {
  display: block;
  font-size: 32rpx;
  color: #e74c3c;
  margin-bottom: 8rpx;
}

.product-meta {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 底部 Tabbar 固定在底部 */
.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
}
