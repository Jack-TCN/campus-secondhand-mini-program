/* pages/index/index.wxss */
.container { 
  height: 100vh; 
  display: flex; 
  flex-direction: column;
  background: #f5f5f5;
}

.header {
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.category-scroll {
  height: 90rpx;
  background: #fff;
  white-space: nowrap;
  border-bottom: 1px solid #f0f0f0;
}

.category-list {
  display: inline-flex;
  padding: 0 20rpx;
  height: 100%;
  align-items: center;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  transition: all 0.3s;
}

.category-item.active {
  transform: scale(1.1);
}

.category-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.category-name {
  font-size: 24rpx;
  color: #666;
}

.category-item.active .category-name {
  color: #667eea;
  font-weight: bold;
}

.products-scroll {
  flex: 1;
  background: #f5f5f5;
}

.products-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx;
}

.product-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  transition: all 0.3s;
}

.product-card:active {
  transform: scale(0.98);
}

.card-image-wrapper {
  position: relative;
  width: 100%;
  height: 340rpx;
  overflow: hidden;
}

.product-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.condition-tag {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: rgba(102, 126, 234, 0.9);
  color: #fff;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.product-info {
  padding: 20rpx;
}

.product-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
  min-height: 78rpx;
}

.price-row {
  display: flex;
  align-items: baseline;
  margin: 12rpx 0;
}

.product-price {
  color: #ff4444;
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 12rpx;
}

.original-price {
  color: #999;
  font-size: 24rpx;
  text-decoration: line-through;
}

.seller-row {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1px solid #f0f0f0;
}

.seller-avatar {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.seller-name {
  font-size: 22rpx;
  color: #666;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.publish-time {
  font-size: 20rpx;
  color: #999;
}

.loading-tip, .no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
  color: #999;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}