/* pages/index/index.wxss - 首页样式 */
.container {
  position: relative;
  height: 100%;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
}

.header {
  position: sticky;
  top: 0;
  z-index: 100;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
}

.search-input {
  width: 100%;
  border-radius: 25px;
  overflow: hidden;
  box-shadow: 0 8px 32px rgba(102, 126, 234, 0.15);
  background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
}

.products-list {
  padding: 30rpx;
  padding-bottom: 140rpx; /* 为底部导航留空间 */
}

.product-card {
  margin-bottom: 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
}

.product-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.product-card:hover::before {
  opacity: 1;
}

.product-image {
  width: 100%;
  height: 400rpx;
  position: relative;
  overflow: hidden;
}

.product-image::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.1));
}

.product-info {
  padding: 30rpx;
  position: relative;
  z-index: 2;
}

.product-title {
  display: block;
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #2c3e50;
  line-height: 1.4;
  background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.product-price {
  display: block;
  font-size: 38rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  background: linear-gradient(135deg, #e74c3c 0%, #f39c12 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.product-meta {
  font-size: 24rpx;
  color: #7f8c8d;
  background: rgba(127, 140, 141, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  display: inline-block;
}

.tag {
  margin: 0 30rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 15rpx;
  padding: 8rpx 20rpx;
  font-size: 22rpx;
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
}

.tabbar {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-top: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.05);
}
