<!-- pages/login/login.wxml -->
<view class="container">
  <view class="logo-section">
    <image class="logo" src="/images/logo.png" mode="aspectFit" />
    <text class="app-name">校园二手交易平台</text>
    <text class="slogan">让闲置物品流转起来</text>
  </view>

  <view class="login-section">
    <button class="login-btn wechat-btn" bindtap="getUserProfile">
      <image class="btn-icon" src="/images/wechat-icon.png" />
      <text>微信一键登录</text>
    </button>
    
    <view class="tips">
      <text>登录即表示同意</text>
      <text class="link">《用户协议》</text>
      <text>和</text>
      <text class="link">《隐私政策》</text>
    </view>
  </view>

  <view class="skip-section">
    <text class="skip-btn" bindtap="skipLogin">暂不登录，随便看看</text>
  </view>
</view>
