<!-- pages/detail/detail.wxml -->
<view class="detail-container">
  <van-nav-bar
    title="商品详情"
    left-arrow
    bind:click-left="onBack"
  />
  
  <image class="image" src="/images/book.jpg" mode="aspectFill" />
  
  <view class="info">
    <text class="title">二手高数教材</text>
    <text class="price">¥18</text>
    <text class="desc">九成新高数教材，无笔记，适合大一学生使用。书籍保存完好，无缺页破损。</text>
  </view>
  
  <view class="actions">
    <view class="btn-chat" bindtap="startChat">联系卖家</view>
    <view class="btn-pay" bindtap="mockPay">立即购买</view>
  </view>
</view>