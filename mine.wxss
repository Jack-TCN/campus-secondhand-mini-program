/* pages/mine/mine.wxss - 我的页面样式 */
.mine-container {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
}

.user-info {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  text-align: center;
  color: white;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4px solid rgba(255, 255, 255, 0.3);
  margin-bottom: 20rpx;
}

.username {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.user-desc {
  font-size: 24rpx;
  opacity: 0.8;
}

.menu-list {
  margin: 30rpx 20rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
}

.menu-item {
  padding: 40rpx;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f8f9ff;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 20rpx;
}

.menu-title {
  flex: 1;
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 500;
}

.menu-arrow {
  color: #bdc3c7;
  font-size: 24rpx;
}