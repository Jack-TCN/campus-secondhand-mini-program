/* pages/detail/detail.wxss */
.detail-container { 
  padding: 10px;
  background: #f5f5f5;
  min-height: 100vh;
}

.image { 
  width: 100%; 
  height: 200px; 
  border-radius: 6px; 
}

.info { 
  margin-top: 10px;
  background: #fff;
  padding: 15px;
  border-radius: 8px;
}

.title { 
  font-size: 20px; 
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 10px;
}

.price { 
  font-size: 22px; 
  color: #f60; 
  margin-top: 5px;
  display: block;
}

.desc { 
  font-size: 14px; 
  color: #666; 
  margin-top: 8px;
  line-height: 1.6;
}

.actions {
  display: flex;
  margin-top: 20px;
  padding: 0 10px;
}

.btn-chat, .btn-pay {
  flex: 1;
  height: 40px;
  line-height: 40px;
  text-align: center;
  border-radius: 4px;
  font-size: 14px;
}

.btn-chat {
  margin-right: 8px;
  background: #fff;
  color: #667eea;
  border: 1px solid #667eea;
}

.btn-pay {
  background: #667eea;
  color: #fff;
  border: none;
}