.detail-container { padding: 10px; }
.image { width: 100%; height: 200px; border-radius: 6px; }
.info { margin-top: 10px; }
.title { font-size: 20px; color: #333; }
.price { font-size: 22px; color: #f60; margin-top: 5px; }
.desc { font-size: 14px; color: #666; margin-top: 8px; }
.actions {
  display: flex;
  margin-top: 20px;
}
.btn-chat, .btn-pay {
  flex: 1;
  height: 40px;
  line-height: 40px;
  text-align: center;
  border-radius: 4px;
}
.btn-chat {
  margin-right: 8px;
  background: #fff;
  color: #157EFB;
  border: 1px solid #157EFB;
}
.btn-pay {
  background: #157EFB;
  color: #fff;
  border: none;
}
