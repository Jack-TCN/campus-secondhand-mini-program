/* pages/detail/detail.wxss - 详情页面样式 */
.detail-container {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
}

.detail-content {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
}

.detail-image {
  width: 100%;
  height: 500rpx;
  position: relative;
}

.detail-info {
  padding: 40rpx;
}

.detail-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.detail-price {
  font-size: 48rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #e74c3c 0%, #f39c12 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 30rpx;
}

.detail-desc {
  font-size: 28rpx;
  color: #34495e;
  line-height: 1.6;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: #f8f9ff;
  border-radius: 16rpx;
  border-left: 4px solid #667eea;
}

.actions {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
}

.btn-chat, .btn-pay {
  flex: 1;
  padding: 30rpx 0;
  text-align: center;
  border-radius: 25rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

.btn-chat {
  background: white;
  color: #667eea;
  border: 2px solid #667eea;
}

.btn-chat:active {
  background: #667eea;
  color: white;
  transform: translateY(2rpx);
}

.btn-pay {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
}

.btn-pay:active {
  transform: translateY(2rpx);
  box-shadow: 0 4px 16px rgba(102, 126, 234, 0.3);
}
