/* packageA/pages/publish/publish.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 80rpx;
}

.header {
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.form-section {
  margin-top: 20rpx;
}

.form-item {
  background-color: #fff;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: flex-start;
}

.label {
  width: 140rpx;
  font-size: 30rpx;
  color: #333;
  flex-shrink: 0;
}

.input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.textarea {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  min-height: 200rpx;
}

.picker-item {
  align-items: center;
}

.picker {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.placeholder {
  color: #999;
  font-size: 30rpx;
}

.arrow {
  color: #999;
  font-size: 28rpx;
  margin-left: 10rpx;
}

.image-list {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.image-item {
  width: 180rpx;
  height: 180rpx;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: #ff4444;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

.add-image {
  width: 180rpx;
  height: 180rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fafafa;
}

.add-icon {
  font-size: 60rpx;
  color: #999;
}

.contact-section {
  flex: 1;
  display: flex;
  align-items: center;
}

.contact-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.publish-btn-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
}

.publish-btn {
  width: 100%;
  height: 90rpx;
  background-color: #4CAF50;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 8rpx;
  border: none;
}
