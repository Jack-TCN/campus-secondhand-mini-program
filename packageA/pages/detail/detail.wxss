/* packageA/pages/detail/detail.wxss */
.detail-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.image-swiper {
  width: 100%;
  height: 750rpx;
  background-color: white;
}

.image-swiper image {
  width: 100%;
  height: 100%;
}

.product-info {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.price-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.price {
  font-size: 48rpx;
  color: #ff4444;
  font-weight: bold;
  margin-right: 20rpx;
}

.original-price {
  font-size: 32rpx;
  color: #999;
  text-decoration: line-through;
}

.title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.tags {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.stats {
  display: flex;
  gap: 40rpx;
  color: #666;
  font-size: 28rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.description {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.desc-content {
  font-size: 30rpx;
  color: #666;
  line-height: 1.8;
}

.seller-info {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.seller-card {
  display: flex;
  align-items: center;
}

.seller-card .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.seller-card .info {
  flex: 1;
}

.seller-card .name {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.seller-card .school {
  font-size: 28rpx;
  color: #666;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  gap: 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.action-buttons {
  display: flex;
  gap: 30rpx;
}

.action-btn {
  background: white;
  border: 2rpx solid #e8e8e8;
  border-radius: 40rpx;
  padding: 16rpx 30rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 28rpx;
  color: #666;
  min-width: 140rpx;
  justify-content: center;
}

.action-btn.favorite.active {
  color: #ff4444;
  border-color: #ff4444;
  background-color: #fff5f5;
}

.action-btn.share {
  color: #667eea;
  border-color: #667eea;
}

.bottom-bar van-button {
  flex: 1;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}
